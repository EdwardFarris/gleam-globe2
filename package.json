    "express-session": "^1.15.6",
    "google-maps-react": "^2.0.2",
    "if-env": "^1.0.4",
    "mongoose": "^5.3.16",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "react": "^16.8.6",
